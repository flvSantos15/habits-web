model Habit {
  id         String          @id @default(uuid())
  title      String
  created_at DateTime
  dayHabits  DayHabit[]
  weekDays   HabitWeekDays[]

  @@map("habits")
}

model HabitWeekDays {
  id       String @id @default(uuid())
  habit_id String
  week_day Int
  habit    Habit  @relation(fields: [habit_id], references: [id])

  @@unique([habit_id, week_day], map: "habit_week_days_unique")
  @@map("habit_week_days")
}

model Day {
  id        String     @id @default(uuid())
  date      DateTime   @unique(map: "days_unique")
  dayHabits DayHabit[]

  @@map("days")
}

model DayHabit {
  id       String @id @default(uuid())
  day_id   String
  habit_id String
  day      Day    @relation(fields: [day_id], references: [id])
  habit    Habit  @relation(fields: [habit_id], references: [id])

  @@unique([day_id, habit_id], map: "day_habits_unique")
  @@index([habit_id], map: "day_habits_habits_FK")
  @@map("day_habits")
}
