generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Habit {
  id         String          @id @default(uuid()) @db.VarChar(255)
  title      String          @db.VarChar(255)
  created_at DateTime        @db.DateTime(0)
  dayHabits  DayHabit[]
  weekDays   HabitWeekDays[]

  @@map("habits")
}

model HabitWeekDays {
  id       String @id @default(uuid()) @db.VarChar(255)
  habit_id String @db.VarChar(255)
  week_day Int
  habit    Habit  @relation(fields: [habit_id], references: [id], onUpdate: Restrict, map: "habit_week_days_habits_FK")

  @@unique([habit_id, week_day], map: "habit_week_days_unique")
  @@map("habit_week_days")
}

model Day {
  id        String     @id @default(uuid()) @db.VarChar(255)
  date      DateTime   @unique(map: "days_unique") @db.DateTime(0)
  dayHabits DayHabit[]

  @@map("days")
}

model DayHabit {
  id       String @id @default(uuid()) @db.VarChar(255)
  day_id   String @db.VarChar(255)
  habit_id String @db.VarChar(255)
  day      Day    @relation(fields: [day_id], references: [id], onUpdate: Restrict, map: "day_habits_days_FK")
  habit    Habit  @relation(fields: [habit_id], references: [id], onUpdate: Restrict, map: "day_habits_habits_FK")

  @@unique([day_id, habit_id], map: "day_habits_unique")
  @@index([habit_id], map: "day_habits_habits_FK")
  @@map("day_habits")
}
